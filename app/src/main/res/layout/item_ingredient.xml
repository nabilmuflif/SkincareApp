<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Modern accent bar with rounded corners -->
        <View
            android:id="@+id/v_rating_indicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@drawable/rating_indicator_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Main content container -->
        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/btn_favorite_ingredient"
            app:layout_constraintStart_toEndOf="@id/v_rating_indicator"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_ingredient_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="2dp"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                tools:text="Hyaluronic Acid" />

            <TextView
                android:id="@+id/tv_ingredient_function"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_medium"
                android:letterSpacing="0.005"
                android:lineSpacingExtra="1dp"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                tools:text="Deeply hydrates and plumps skin" />

        </LinearLayout>

        <!-- Modern favorite button with better touch target -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_favorite_ingredient"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:contentDescription="@string/toggle_favorite"
            app:icon="@drawable/ic_favorite"
            app:iconSize="24dp"

            app:layout_constraintBottom_toBottomOf="@id/content_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/content_container" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>