<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:background="@color/background_color">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/decode_title"
        android:textSize="@dimen/text_size_title"
        android:textStyle="bold"
        android:textColor="@color/primary_color"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_large" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_normal"
        app:cardCornerRadius="@dimen/material_card_radius"
        app:cardElevation="@dimen/material_card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/card_padding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/paste_ingredients"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="@dimen/margin_small" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ingredients_hint"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="@dimen/margin_medium" />

            <EditText
                android:id="@+id/etIngredientsList"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_multiline_height"
                android:hint="@string/ingredients_example"
                android:background="@drawable/edittext_background"
                android:padding="@dimen/edittext_padding"
                android:textSize="@dimen/text_size_normal"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:layout_marginBottom="@dimen/margin_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAnalyze"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:text="@string/analyze_button"
                    android:background="@drawable/button_primary"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_normal"
                    android:layout_marginEnd="@dimen/margin_small" />

                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height"
                    android:text="@string/clear_button"
                    android:background="@drawable/button_outline"
                    android:textColor="@color/primary_color"
                    android:textSize="@dimen/text_size_normal"
                    android:paddingHorizontal="@dimen/button_padding" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvAnalysisTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/analysis_results"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="@dimen/margin_medium"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layoutAnalysisStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="@dimen/card_padding"
        android:layout_marginBottom="@dimen/margin_normal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_normal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/overall_score"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tvOverallScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0/4.0"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:textColor="@color/text_primary" /> </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvSuperstarCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/text_size_score"
                    android:textStyle="bold"
                    android:textColor="@color/superstar_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/superstar"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvGoodieCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/text_size_score"
                    android:textStyle="bold"
                    android:textColor="@color/goodie_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goodie"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvNoTakeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/text_size_score"
                    android:textStyle="bold"
                    android:textColor="@color/no_take_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_take"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvNeutralCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/text_size_score"
                    android:textStyle="bold"
                    android:textColor="@color/neutral_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/neutral"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAnalysisResults"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminate="true"
        android:indeterminateTint="@color/primary_color" />

</LinearLayout>